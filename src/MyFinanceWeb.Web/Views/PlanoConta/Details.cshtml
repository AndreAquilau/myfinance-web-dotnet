@model MyFinanceWeb.Application.DTOs.PlanoContaDTOs.PlanoContaDTO

@{
    ViewData["Title"] = "Cadastro de Plano de Contas";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<form asp-controller="PlanoConta" >
    <div class="container">
        <div class="form-group">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" class="form-control" ReadOnly="true"/>
            <input asp-for="Id" type="hidden" class="form-control" /> 
        </div>

        <div class="form-group">
            <label asp-for="Tipo">Tipo</label>
            <input asp-for="Tipo" class="form-control" ReadOnly="true"/> 
        </div> 

        <div class="form-group" style="padding-top: 20px;">
            <a asp-controller="PlanoConta" asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
        </div>
    </div>
</form>
