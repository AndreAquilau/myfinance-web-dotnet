@model MyFinanceWeb.Application.DTOs.PlanoContaDTOs.PlanoContaDTO

@{
    ViewData["Title"] = "Cadastro de Plano de Contas";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<form asp-controller="PlanoConta" asp-action="Create" method="post">
    <div class="container">
        <div class="form-group">
            <label asp-for="Descricao">Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>@Html.RadioButtonFor(pc => pc.Tipo, "D") Despesa </label>
            <label>@Html.RadioButtonFor(pc => pc.Tipo, "R") Receita </label>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group" style="padding-top: 20px;">
            <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
            <a asp-controller="PlanoConta" asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
    </div>
</form>
