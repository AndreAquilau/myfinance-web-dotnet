@model IEnumerable<MyFinanceWeb.Application.DTOs.TransacaoDTOs.TransacaoDTO>

@{
    ViewData["Title"] = "Transações";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="d-flex justify-content-end">
                <a asp-controller="Transacao" asp-action="Create" title="Create" class="btn btn-primary">
                    <span class="fas fa-search">Novo Registro</span>
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Histórico
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Historico)
                    </td>
                    <td class="d-flex justify-content-end gap-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fas fa-edit">Edit</span>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-primary">
                            <span class="fas fa-search">Details</span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                            <span class="fas fa-trash-alt">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function cadastrarTransacao() {
        var form = document.createElement('form');
        form.method = 'get';
        form.action = '@Url.Action("Create")';

        document.body.appendChild(form);
        form.submit();
    }
</script>
